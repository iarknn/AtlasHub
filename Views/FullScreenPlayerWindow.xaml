<Window x:Class="AtlasHub.Views.FullScreenPlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AtlasHub - Tam Ekran"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        KeyDown="Window_KeyDown">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Buraya LiveTvPage'ten gelen VideoHost eklenecek -->
        <Grid x:Name="VideoHostRoot"
              Grid.Row="0"
              Background="Black"/>

        <!-- Alt kontrol barı -->
        <Border Grid.Row="1"
                Background="#66000000"
                Padding="8">
            <DockPanel>
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Left">
                    <TextBlock Text="Görüntü"
                               Foreground="White"
                               Margin="0,0,4,0"
                               VerticalAlignment="Center"/>
                    <ComboBox x:Name="FullScreenFitCombo"
                              Width="100"
                              SelectedIndex="0"
                              SelectionChanged="FullScreenFitCombo_SelectionChanged"
                              VerticalAlignment="Center">
                        <ComboBoxItem Content="Sığdır" Tag="Fit"/>
                        <ComboBoxItem Content="Doldur" Tag="Fill"/>
                        <ComboBoxItem Content="Orijinal" Tag="Original"/>
                    </ComboBox>
                </StackPanel>

                <TextBlock Text="ESC ile çık"
                           Foreground="#CCFFFFFF"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           DockPanel.Dock="Right"
                           Margin="0,0,4,0"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>