<Window x:Class="AtlasHub.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:loc="clr-namespace:AtlasHub.Localization"
        mc:Ignorable="d"
        Title="{loc:Loc Key=App.Title}"
        WindowStartupLocation="CenterScreen"
        MinWidth="1200"
        MinHeight="700"
        Background="#FF0B0B0E">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility" />
        <!-- Bu pencere özelinde yumuşak ikinci metin rengi -->
        <SolidColorBrush x:Key="BrushFg2" Color="#BFFFFFFF" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <!-- Sol sidebar -->
            <ColumnDefinition Width="220" />
            <!-- İçerik -->
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0"
                Background="#FF121218">
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- logo / profil -->
                    <RowDefinition Height="24"/>
                    <RowDefinition Height="Auto"/>
                    <!-- nav -->
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto"/>
                    <!-- durum -->
                </Grid.RowDefinitions>

                <!-- App title + profile -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="{loc:Loc Key=App.Title}"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="White"/>
                    <TextBlock Text="{Binding ProfileDisplay}"
                               Margin="0,4,0,0"
                               Foreground="{StaticResource BrushFg2}"/>
                </StackPanel>

                <!-- NAV -->
                <StackPanel Grid.Row="2"
                            Margin="0,0,0,16">

                    <!-- Canlı TV -->
                    <ToggleButton Margin="0,8,0,0"
                                  IsChecked="{Binding IsLive, Mode=OneWay}"
                                  Command="{Binding GoLiveCommand}"
                                  Style="{DynamicResource SidebarToggle}">
                        <TextBlock Text="{loc:Loc Key=Nav.LiveTv}"
                                   Foreground="White"/>
                    </ToggleButton>

                    <!-- Filmler -->
                    <ToggleButton Margin="0,8,0,0"
                                  IsChecked="{Binding IsMovies, Mode=OneWay}"
                                  Command="{Binding GoMoviesCommand}"
                                  Style="{DynamicResource SidebarToggle}">
                        <TextBlock Text="{loc:Loc Key=Nav.Movies}"
                                   Foreground="White"/>
                    </ToggleButton>

                    <!-- Diziler -->
                    <ToggleButton Margin="0,8,0,0"
                                  IsChecked="{Binding IsSeries, Mode=OneWay}"
                                  Command="{Binding GoSeriesCommand}"
                                  Style="{DynamicResource SidebarToggle}">
                        <TextBlock Text="{loc:Loc Key=Nav.Series}"
                                   Foreground="White"/>
                    </ToggleButton>

                    <!-- Kaynaklar -->
                    <ToggleButton Margin="0,8,0,0"
                                  IsChecked="{Binding IsSources, Mode=OneWay}"
                                  Command="{Binding GoSourcesCommand}"
                                  Style="{DynamicResource SidebarToggle}">
                        <TextBlock Text="{loc:Loc Key=Nav.Sources}"
                                   Foreground="White"/>
                    </ToggleButton>

                    <!-- Ayarlar -->
                    <ToggleButton Margin="0,8,0,0"
                                  IsChecked="{Binding IsSettings, Mode=OneWay}"
                                  Command="{Binding GoSettingsCommand}"
                                  Style="{DynamicResource SidebarToggle}">
                        <TextBlock Text="{loc:Loc Key=Nav.Settings}"
                                   Foreground="White"/>
                    </ToggleButton>
                </StackPanel>

                <!-- Durum / sprint -->
                <StackPanel Grid.Row="4">
                    <TextBlock Text="{loc:Loc Key=Nav.StatusHeader}"
                               FontSize="12"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource BrushFg2}"/>
                    <TextBlock Text="{loc:Loc Key=Nav.SprintStatus}"
                               Margin="0,4,0,0"
                               Foreground="{StaticResource BrushFg2}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- MAIN CONTENT + TOAST -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- İçerik sayfaları -->
            <Border Grid.Row="0"
                    Background="#FF1A1A24"
                    Padding="16">
                <ContentControl Content="{Binding CurrentPage}" />
            </Border>

            <!-- Toast bar -->
            <Border Grid.Row="1"
                    Margin="16"
                    Padding="10"
                    CornerRadius="6"
                    Background="#DD202020"
                    BorderBrush="#55FFFFFF"
                    BorderThickness="1"
                    Visibility="{Binding IsToastVisible, Converter={StaticResource BoolToVisibility}}">
                <TextBlock Text="{Binding ToastMessage}"
                           Foreground="White" />
            </Border>
        </Grid>
    </Grid>
</Window>