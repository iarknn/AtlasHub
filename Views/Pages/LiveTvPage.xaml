<UserControl x:Class="AtlasHub.Views.Pages.LiveTvPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vlc="clr-namespace:LibVLCSharp.WPF;assembly=LibVLCSharp.WPF"
             mc:Ignorable="d">

    <UserControl.Resources>
        <SolidColorBrush x:Key="BrushFg2" Color="#BFFFFFFF"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TOP BAR -->
        <Border Grid.Row="0" Style="{StaticResource Card}" Padding="12" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="320"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Canlı TV"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource BrushFg1}"
                           VerticalAlignment="Center"
                           Margin="0,0,14,0"/>

                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding Scopes}"
                          SelectedItem="{Binding SelectedScope}"
                          DisplayMemberPath="DisplayName"
                          Height="34"
                          VerticalAlignment="Center"/>

                <Button Grid.Column="3"
                        Content="Yenile"
                        Command="{Binding RefreshCommand}"
                        Height="34"
                        Padding="14,0"
                        VerticalAlignment="Center"/>

                <TextBlock Grid.Column="5"
                           Text="{Binding EmptyHint}"
                           Foreground="{StaticResource BrushFg2}"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- MAIN -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Categories -->
            <Border Grid.Column="0" Style="{StaticResource Card}" Padding="12" Margin="0,0,10,0">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                        <TextBlock Text="{Binding CategoriesHeader}"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource BrushFg1}"/>
                        <TextBox x:Name="CategorySearchBox"
                                 Margin="0,10,0,0"
                                 Height="32"
                                 VerticalContentAlignment="Center"
                                 TextChanged="CategorySearchBox_TextChanged"
                                 ToolTip="Kategori ara..."/>
                    </StackPanel>

                    <ListBox x:Name="CategoriesList"
                             ItemsSource="{Binding Categories}"
                             SelectedItem="{Binding SelectedCategory}"
                             BorderThickness="0"
                             Background="Transparent"/>
                </DockPanel>
            </Border>

            <!-- Channels -->
            <Border Grid.Column="1" Style="{StaticResource Card}" Padding="12" Margin="0,0,10,0">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Margin="0,0,0,10">
                        <TextBlock Text="{Binding ChannelsHeader}"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource BrushFg1}"/>

                        <TextBox Text="{Binding ChannelSearch, UpdateSourceTrigger=PropertyChanged}"
                                 Margin="0,10,0,0"
                                 Height="32"
                                 VerticalContentAlignment="Center"
                                 ToolTip="Kanal ara..."/>

                        <TextBlock Text="{Binding ResultsHeader}"
                                   Foreground="{StaticResource BrushFg2}"
                                   FontSize="12"
                                   Margin="0,8,0,0"/>
                    </StackPanel>

                    <ListBox ItemsSource="{Binding Channels}"
                             SelectedItem="{Binding SelectedChannel}"
                             BorderThickness="0"
                             Background="Transparent">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="46"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="42" Height="42" CornerRadius="10" Background="#141427" VerticalAlignment="Center">
                                        <Image Source="{Binding LogoPath}" Stretch="Uniform"/>
                                    </Border>

                                    <StackPanel Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}"
                                                   Foreground="{StaticResource BrushFg1}"
                                                   FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Group}"
                                                   Foreground="{StaticResource BrushFg2}"
                                                   FontSize="12"
                                                   Margin="0,2,0,0"/>

                                        <!-- NOW -->
                                        <TextBlock Text="{Binding NowTitle}"
                                                   Foreground="{StaticResource BrushFg1}"
                                                   FontSize="11"
                                                   Margin="0,4,0,0"
                                                   TextTrimming="CharacterEllipsis"/>

                                        <!-- NEXT -->
                                        <TextBlock Text="{Binding NextTitle, StringFormat='Sonra: {0}'}"
                                                   Foreground="{StaticResource BrushFg2}"
                                                   FontSize="10"
                                                   Margin="0,2,0,0"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Right / Player -->
            <Border Grid.Column="2" Style="{StaticResource Card}" Padding="12">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Oynatıcı"
                               Grid.Row="0"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource BrushFg1}"
                               Margin="0,0,0,10"/>

                    <!-- Video -->
                    <Border x:Name="VideoContainer"
                            Grid.Row="1"
                            CornerRadius="12"
                            Background="#07070C"
                            BorderBrush="#22FFFFFF"
                            BorderThickness="1"
                            ClipToBounds="True">
                        <vlc:VideoView x:Name="VideoHost"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Stretch"/>
                    </Border>

                    <!-- Program Detail Card -->
                    <Border Grid.Row="2"
                            Margin="0,10,0,0"
                            Padding="12"
                            CornerRadius="10"
                            Background="#0C0C14"
                            BorderBrush="#22FFFFFF"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Program Detayı"
                                       Foreground="{StaticResource BrushFg2}"
                                       FontSize="12"
                                       Margin="0,0,0,6"/>

                            <TextBlock Text="{Binding SelectedProgramTitle}"
                                       Foreground="{StaticResource BrushFg1}"
                                       FontWeight="SemiBold"
                                       FontSize="14"/>

                            <TextBlock Text="{Binding SelectedProgramTimeRange}"
                                       Foreground="{StaticResource BrushFg2}"
                                       FontSize="12"
                                       Margin="0,4,0,0"/>

                            <ProgressBar Height="6"
                                         Margin="0,8,0,0"
                                         Minimum="0"
                                         Maximum="100"
                                         Value="{Binding SelectedProgramProgress, Mode=OneWay, FallbackValue=0}"/>

                            <TextBlock Text="{Binding SelectedProgramRemainingText, Mode=OneWay}"
                                       Foreground="{StaticResource BrushFg2}"
                                       FontSize="12"
                                       Margin="0,6,0,0"/>

                            <TextBlock Text="{Binding SelectedProgramDescription}"
                                       Foreground="{StaticResource BrushFg1}"
                                       FontSize="12"
                                       Margin="0,6,0,0"
                                       TextWrapping="Wrap"
                                       MaxHeight="44"/>
                        </StackPanel>
                    </Border>

                    <!-- Timeline rail -->
                    <Border Grid.Row="3"
                            Height="112"
                            Margin="0,10,0,0"
                            Padding="6"
                            CornerRadius="10"
                            Background="#0C0C14"
                            BorderBrush="#22FFFFFF"
                            BorderThickness="1"
                            ClipToBounds="True">
                        <DockPanel>
                            <Grid DockPanel.Dock="Top" Margin="0,0,0,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Timeline"
                                           FontWeight="SemiBold"
                                           Foreground="{StaticResource BrushFg1}"
                                           VerticalAlignment="Center"/>

                                <Button Grid.Column="1"
                                        Content="◀"
                                        Width="30"
                                        Height="24"
                                        Margin="8,0,6,0"
                                        Click="BtnTimelineLeft_Click"/>

                                <Button Grid.Column="2"
                                        Content="▶"
                                        Width="30"
                                        Height="24"
                                        Click="BtnTimelineRight_Click"/>
                            </Grid>

                            <ScrollViewer x:Name="TimelineScroll"
                                          Height="72"
                                          Padding="6,0,6,0"
                                          ClipToBounds="True"
                                          VerticalScrollBarVisibility="Disabled"
                                          HorizontalScrollBarVisibility="Hidden"
                                          PanningMode="HorizontalOnly"
                                          CanContentScroll="False"
                                          VerticalContentAlignment="Center"
                                          Background="Transparent"
                                          PreviewMouseWheel="TimelineScroll_PreviewMouseWheel"
                                          PreviewMouseLeftButtonDown="TimelineScroll_PreviewMouseLeftButtonDown"
                                          PreviewMouseMove="TimelineScroll_PreviewMouseMove"
                                          PreviewMouseLeftButtonUp="TimelineScroll_PreviewMouseLeftButtonUp">

                                <ItemsControl x:Name="TimelineItems"
                                              ItemsSource="{Binding Timeline}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>

                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Button Command="{Binding DataContext.SelectTimelineItemCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                    CommandParameter="{Binding}"
                                                    Padding="0"
                                                    BorderThickness="0"
                                                    Background="Transparent">
                                                <Border Width="240"
                                                        Height="64"
                                                        CornerRadius="10"
                                                        Padding="8"
                                                        Margin="0,0,10,0"
                                                        VerticalAlignment="Center">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#141427"/>
                                                            <Setter Property="BorderBrush" Value="#22FFFFFF"/>
                                                            <Setter Property="BorderThickness" Value="1"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                                    <Setter Property="Background" Value="#1B1B33"/>
                                                                    <Setter Property="BorderBrush" Value="#55FFFFFF"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>

                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="*"/>
                                                        </Grid.RowDefinitions>

                                                        <TextBlock Text="{Binding TimeRangeText}"
                                                                   Foreground="{StaticResource BrushFg2}"
                                                                   FontSize="11"/>

                                                        <TextBlock Grid.Row="1"
                                                                   Text="{Binding Title}"
                                                                   Foreground="{StaticResource BrushFg1}"
                                                                   FontWeight="SemiBold"
                                                                   FontSize="12"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   Margin="0,4,0,0"/>

                                                        <Grid Grid.Row="2" Margin="0,6,0,0" VerticalAlignment="Bottom">
                                                            <ProgressBar Height="4"
                                                                         Minimum="0"
                                                                         Maximum="100"
                                                                         Value="{Binding Progress, Mode=OneWay, FallbackValue=0}"/>
                                                        </Grid>
                                                    </Grid>
                                                </Border>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </DockPanel>
                    </Border>

                    <!-- Controls -->
                    <Border Grid.Row="4"
                            Margin="0,10,0,0"
                            Padding="10"
                            CornerRadius="10"
                            Background="#0C0C14"
                            BorderBrush="#22FFFFFF"
                            BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <!-- Play -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Pause -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Stop -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Mute -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Fullscreen -->
                                <ColumnDefinition Width="16"/>
                                <!-- Spacer -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Görüntü + Ses label -->
                                <ColumnDefinition Width="*"/>
                                <!-- Slider -->
                                <ColumnDefinition Width="Auto"/>
                                <!-- Value -->
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Width="44" Height="32" Content="⏵" Click="BtnPlay_Click"/>
                            <Button Grid.Column="1" Width="44" Height="32" Margin="8,0,0,0" Content="⏸" Click="BtnPause_Click"/>
                            <Button Grid.Column="2" Width="44" Height="32" Margin="8,0,0,0" Content="⏹" Click="BtnStop_Click"/>
                            <Button Grid.Column="3" Width="44" Height="32" Margin="8,0,0,0" Content="🔇" Click="BtnMute_Click"/>

                            <!-- Tam ekran -->
                            <Button Grid.Column="4"
                                    Width="44"
                                    Height="32"
                                    Margin="8,0,0,0"
                                    Content="⛶"
                                    ToolTip="Tam ekran (ESC ile çık)"
                                    Click="BtnFullscreen_Click"/>

                            <!-- Görüntü modu + Ses label'ı -->
                            <StackPanel Grid.Column="6"
                                        Orientation="Horizontal"
                                        VerticalAlignment="Center">
                                <TextBlock Text="Görüntü"
                                           Foreground="{StaticResource BrushFg2}"
                                           Margin="0,0,4,0"
                                           VerticalAlignment="Center"/>
                                <ComboBox x:Name="VideoFitModeCombo"
                                          Width="90"
                                          SelectedIndex="0"
                                          Margin="0,0,12,0"
                                          VerticalAlignment="Center"
                                          SelectionChanged="VideoFitModeCombo_SelectionChanged">
                                    <ComboBoxItem Content="Sığdır" Tag="Fit"/>
                                    <ComboBoxItem Content="Doldur" Tag="Fill"/>
                                    <ComboBoxItem Content="Orijinal" Tag="Original"/>
                                </ComboBox>

                                <TextBlock Text="Ses"
                                           Foreground="{StaticResource BrushFg2}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                            </StackPanel>

                            <Slider Grid.Column="7"
                                    x:Name="VolumeSlider"
                                    Minimum="0"
                                    Maximum="100"
                                    Value="80"
                                    VerticalAlignment="Center"
                                    ValueChanged="VolumeSlider_ValueChanged"/>

                            <TextBlock Grid.Column="8"
                                       x:Name="VolumeValueText"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource BrushFg2}"
                                       Text="80"
                                       Margin="10,0,0,0"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>