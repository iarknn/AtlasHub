<UserControl x:Class="AtlasHub.Views.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <!-- Varsayılan fırçalar App.xaml'den geliyor.
             Burada sadece tonlama için ek bir yardımcı fırça tanımladım. -->
        <SolidColorBrush x:Key="BrushFg2" Color="#BFFFFFFF"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ÜST BAR -->
        <Border Grid.Row="0"
                Style="{StaticResource Card}"
                Padding="16"
                Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Ayarlar"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource BrushFg1}"/>

                    <TextBlock Text="Dil ve uygulama tercihleri"
                               Margin="0,4,0,0"
                               Foreground="{StaticResource BrushFg2}"
                               FontSize="12"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ANA İÇERİK -->
        <Border Grid.Row="1"
                Style="{StaticResource Card}"
                Padding="16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Dil Bölümü Başlık -->
                <StackPanel Grid.Row="0">
                    <TextBlock Text="Dil"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource BrushFg1}"
                               FontSize="14"/>

                    <TextBlock Text="Atlas Hub varsayılan olarak Türkçe gelir. Diğer diller topluluk tarafından dil paketi olarak eklenebilir."
                               Margin="0,6,0,0"
                               TextWrapping="Wrap"
                               Foreground="{StaticResource BrushFg2}"
                               FontSize="12"/>
                </StackPanel>

                <!-- Dil Seçimi + Butonlar -->
                <Grid Grid.Row="1" Margin="0,16,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Dil combobox -->
                    <ComboBox Grid.Column="0"
                              ItemsSource="{Binding Languages}"
                              SelectedItem="{Binding SelectedLanguage}"
                              DisplayMemberPath="DisplayName"
                              Height="34"
                              VerticalAlignment="Center"/>

                    <!-- Yenile -->
                    <Button Grid.Column="1"
                            Content="Dilleri Yenile"
                            Command="{Binding ReloadLanguagesCommand}"
                            Height="34"
                            Margin="10,0,0,0"
                            Padding="14,0"
                            VerticalAlignment="Center"/>

                    <!-- Uygula -->
                    <Button Grid.Column="2"
                            Content="Uygula"
                            Command="{Binding ApplyLanguageCommand}"
                            Height="34"
                            Margin="10,0,0,0"
                            Padding="20,0"
                            VerticalAlignment="Center"/>
                </Grid>

                <!-- Bilgi kartı -->
                <Border Grid.Row="2"
                        Margin="0,20,0,0"
                        Padding="12"
                        CornerRadius="8"
                        Background="#0C0C14"
                        BorderBrush="#22FFFFFF"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Topluluk Dil Paketleri"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource BrushFg1}"
                                   FontSize="13"/>

                        <TextBlock Text="Ek diller için JSON tabanlı dil paketleri kullanılır."
                                   Margin="0,6,0,0"
                                   Foreground="{StaticResource BrushFg2}"
                                   FontSize="12"
                                   TextWrapping="Wrap"/>

                        <TextBlock Text="%AppData%\AtlasHub\lang\*.json"
                                   Margin="0,4,0,0"
                                   Foreground="{StaticResource BrushFg2}"
                                   FontSize="12"
                                   FontFamily="Consolas, Courier New, monospace"/>

                        <TextBlock Text="Bu klasöre culture adında dosyalar ekleyebilirsiniz: örn. en-US.json"
                                   Margin="0,6,0,0"
                                   Foreground="{StaticResource BrushFg2}"
                                   FontSize="12"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>