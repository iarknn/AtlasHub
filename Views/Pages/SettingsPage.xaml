<UserControl x:Class="AtlasHub.Views.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:loc="clr-namespace:AtlasHub.Localization"
             mc:Ignorable="d">

    <!-- Bu sayfaya özel fırçalar -->
    <UserControl.Resources>
        <!-- LiveTvPage'de kullandığımızla aynı ton -->
        <SolidColorBrush x:Key="BrushFg2" Color="#BFFFFFFF"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0"
                Style="{StaticResource Card}"
                Padding="12"
                Margin="0,0,0,12">
            <StackPanel Orientation="Vertical">
                <TextBlock Text="{loc:Loc Key=Settings.Title}"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource BrushFg1}"/>
                <TextBlock Text="{loc:Loc Key=Settings.Subtitle}"
                           Margin="0,4,0,0"
                           Foreground="{StaticResource BrushFg2}"/>
            </StackPanel>
        </Border>

        <!-- CONTENT -->
        <Grid Grid.Row="1">
            <Border Style="{StaticResource Card}" Padding="16">
                <StackPanel>

                    <!-- Language section -->
                    <TextBlock Text="{loc:Loc Key=Settings.Language.SectionTitle}"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource BrushFg1}"/>

                    <TextBlock Text="{loc:Loc Key=Settings.Language.SectionDescription}"
                               TextWrapping="Wrap"
                               Margin="0,4,0,10"
                               Foreground="{StaticResource BrushFg2}"/>

                    <Grid Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="{loc:Loc Key=Settings.Language.Label}"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource BrushFg1}"
                                   Margin="0,0,8,0"/>

                        <ComboBox Grid.Column="1"
                                  ItemsSource="{Binding Languages}"
                                  SelectedItem="{Binding SelectedLanguage}"
                                  DisplayMemberPath="DisplayName"
                                  Height="32"
                                  VerticalAlignment="Center"/>

                        <Button Grid.Column="2"
                                Content="{loc:Loc Key=Settings.Language.Reload}"
                                Margin="8,0,0,0"
                                Padding="12,0"
                                Height="32"
                                Command="{Binding ReloadLanguagesCommand}"/>

                        <Button Grid.Column="3"
                                Content="{loc:Loc Key=Settings.Language.Apply}"
                                Margin="8,0,0,0"
                                Padding="12,0"
                                Height="32"
                                Command="{Binding ApplyLanguageCommand}"/>
                    </Grid>

                    <!-- Community info -->
                    <Border Margin="0,16,0,0"
                            Padding="10"
                            CornerRadius="8"
                            Background="#10101A"
                            BorderBrush="#22FFFFFF"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="{loc:Loc Key=Settings.Language.CommunityTitle}"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource BrushFg1}"/>

                            <TextBlock Text="{loc:Loc Key=Settings.Language.CommunityDescription}"
                                       Margin="0,4,0,0"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource BrushFg2}"/>

                            <TextBlock Text="{loc:Loc Key=Settings.Language.CommunityPath}"
                                       Margin="0,6,0,0"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       Foreground="{StaticResource BrushFg2}"/>
                        </StackPanel>
                    </Border>

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>