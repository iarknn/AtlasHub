<UserControl x:Class="AtlasHub.Views.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Background="{StaticResource BrushBg1}"
            CornerRadius="{StaticResource Cr16}"
            Padding="18">
        <StackPanel>
            <TextBlock Text="{DynamicResource settings.title}"
                       FontSize="26"
                       FontWeight="SemiBold"/>

            <TextBlock Text="{DynamicResource settings.language}"
                       Margin="0,18,0,6"
                       Foreground="{StaticResource BrushFg1}"/>

            <TextBlock Text="{DynamicResource settings.language.help}"
                       Foreground="{StaticResource BrushFg1}"
                       TextWrapping="Wrap"/>

            <TextBlock Text="{DynamicResource settings.language.communityHint}"
                       Margin="0,12,0,0"
                       Foreground="{StaticResource BrushFg1}"/>
        </StackPanel>
    </Border>
</UserControl>
