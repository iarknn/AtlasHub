<UserControl x:Class="AtlasHub.Views.Pages.PlaceholderPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:loc="clr-namespace:AtlasHub.Localization"
             mc:Ignorable="d">

    <UserControl.Resources>
        <!-- Diğer sayfalarda kullandığımızla aynı ton -->
        <SolidColorBrush x:Key="BrushFg2" Color="#BFFFFFFF" />
    </UserControl.Resources>

    <Grid Background="Transparent">
        <Border Style="{StaticResource Card}"
                Padding="24"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MaxWidth="520">
            <StackPanel HorizontalAlignment="Center">

                <!-- İkon -->
                <TextBlock Text="🎬"
                           FontSize="42"
                           Margin="0,0,0,12"
                           HorizontalAlignment="Center" />

                <!-- Başlık (Filmler / Diziler) -->
                <TextBlock Text="{Binding Title}"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="{StaticResource BrushFg1}"
                           HorizontalAlignment="Center" />

                <!-- Kısa açıklama (lokalize) -->
                <TextBlock Margin="0,8,0,0"
                           Text="{loc:Loc Key=Placeholder.Generic.Line1}"
                           Foreground="{StaticResource BrushFg2}"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />

                <TextBlock Margin="0,2,0,0"
                           Text="{loc:Loc Key=Placeholder.Generic.Line2}"
                           Foreground="{StaticResource BrushFg2}"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />

                <!-- Neler gelecek listesi -->
                <StackPanel Margin="0,16,0,0">
                    <TextBlock Text="{loc:Loc Key=Placeholder.Generic.FeaturesTitle}"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource BrushFg1}" />

                    <StackPanel Margin="0,6,0,0">
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="•"
                                       Margin="0,0,6,0"
                                       Foreground="{StaticResource BrushFg2}" />
                            <TextBlock Text="{loc:Loc Key=Placeholder.Generic.Feature1}"
                                       Foreground="{StaticResource BrushFg2}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="•"
                                       Margin="0,0,6,0"
                                       Foreground="{StaticResource BrushFg2}" />
                            <TextBlock Text="{loc:Loc Key=Placeholder.Generic.Feature2}"
                                       Foreground="{StaticResource BrushFg2}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="•"
                                       Margin="0,0,6,0"
                                       Foreground="{StaticResource BrushFg2}" />
                            <TextBlock Text="{loc:Loc Key=Placeholder.Generic.Feature3}"
                                       Foreground="{StaticResource BrushFg2}" />
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <!-- Küçük not -->
                <TextBlock Margin="0,18,0,0"
                           Text="{loc:Loc Key=Placeholder.Generic.Footer}"
                           FontSize="11"
                           Foreground="{StaticResource BrushFg2}"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>